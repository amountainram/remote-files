{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "additionalProperties": {
    "$ref": "#/$defs/Bucket"
  },
  "required": [
    "$schema"
  ],
  "$defs": {
    "Bucket": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "gcs"
            },
            "configuration": {
              "$ref": "#/$defs/GCSConfig"
            }
          },
          "required": [
            "type",
            "configuration"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "s3"
            },
            "configuration": {
              "$ref": "#/$defs/S3Config"
            }
          },
          "required": [
            "type",
            "configuration"
          ]
        }
      ]
    },
    "GCSConfig": {
      "type": "object",
      "properties": {
        "credential": {
          "type": [
            "string",
            "null"
          ]
        },
        "credentialPath": {
          "type": [
            "string",
            "null"
          ]
        },
        "defaultStorageClass": {
          "anyOf": [
            {
              "$ref": "#/$defs/GcsStorageClass"
            },
            {
              "type": "null"
            }
          ]
        },
        "endpoint": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "predefinedAcl": {
          "type": [
            "string",
            "null"
          ]
        },
        "prefix": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlDirPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "GcsStorageClass": {
      "type": "string",
      "enum": [
        "STANDARD",
        "NEARLINE",
        "COLDLINE",
        "ARCHIVE"
      ]
    },
    "S3Config": {
      "type": "object",
      "properties": {
        "accessKeyId": {
          "type": [
            "string",
            "null"
          ]
        },
        "defaultStorageClass": {
          "anyOf": [
            {
              "$ref": "#/$defs/S3StorageClass"
            },
            {
              "type": "null"
            }
          ]
        },
        "endpoint": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "prefix": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlDirPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        },
        "region": {
          "type": [
            "string",
            "null"
          ]
        },
        "secretAccessKey": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "S3StorageClass": {
      "type": "string",
      "enum": [
        "D_E_E_P__A_R_C_H_I_V_E",
        "G_L_A_C_I_E_R",
        "G_L_A_C_I_E_R__I_R",
        "I_N_T_E_L_L_I_G_E_N_T__T_I_E_R_I_N_G",
        "O_N_E_Z_O_N_E__I_A",
        "O_U_T_P_O_S_T_S",
        "R_E_D_U_C_E_D__R_E_D_U_N_D_A_N_C_Y",
        "S_T_A_N_D_A_R_D",
        "S_T_A_N_D_A_R_D__I_A"
      ]
    },
    "UrlDirPathVisitor": {
      "type": "string"
    },
    "UrlPathVisitor": {
      "type": "string"
    }
  }
}