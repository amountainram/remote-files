{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": {
    "$ref": "#/$defs/Bucket"
  },
  "$defs": {
    "Bucket": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "gcs"
            },
            "configuration": {
              "$ref": "#/$defs/GCSConfig"
            }
          },
          "required": [
            "type",
            "configuration"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "s3"
            },
            "configuration": {
              "$ref": "#/$defs/S3Config"
            }
          },
          "required": [
            "type",
            "configuration"
          ]
        }
      ]
    },
    "GCSConfig": {
      "type": "object",
      "properties": {
        "credential": {
          "type": [
            "string",
            "null"
          ]
        },
        "credentialPath": {
          "type": [
            "string",
            "null"
          ]
        },
        "defaultStorageClass": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "STANDARD",
            "NEARLINE",
            "COLDLINE",
            "ARCHIVE"
          ]
        },
        "endpoint": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "predefinedAcl": {
          "type": [
            "string",
            "null"
          ]
        },
        "prefix": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlDirPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "S3Config": {
      "type": "object",
      "properties": {
        "accessKeyId": {
          "type": [
            "string",
            "null"
          ]
        },
        "defaultStorageClass": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "DEEP_ARCHIVE",
            "GLACIER",
            "GLACIER_IR",
            "INTELLIGENT_TIERING",
            "ONEZONE_IA",
            "OUTPOSTS",
            "REDUCED_REDUNDANCY",
            "STANDARD",
            "STANDARD_IA"
          ]
        },
        "endpoint": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "prefix": {
          "anyOf": [
            {
              "$ref": "#/$defs/UrlDirPathVisitor"
            },
            {
              "type": "null"
            }
          ]
        },
        "region": {
          "type": [
            "string",
            "null"
          ]
        },
        "secretAccessKey": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "UrlDirPathVisitor": {
      "type": "string"
    },
    "UrlPathVisitor": {
      "type": "string"
    }
  }
}